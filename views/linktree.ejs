<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= settings.page_title %></title>
    <link rel="icon" href="/favicon.png">
    <link rel="stylesheet" href="/styles.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
    <style>
        :root {
            --background-gradient: <%= theme.backgroundGradient %>;
            --container-gradient: <%= theme.containerGradient %>;
            --text-color: <%= theme.textColor %>;
            --link-color: <%= theme.linkColor %>;
            --link-text-color: <%= theme.linkTextColor %>;
        }
    </style>
    <script>
        window.countriesData = <%- JSON.stringify(countries) %>;
    </script>
    <script src="https://unpkg.com/htmx.org@1.9.10"></script>
    <script src="/fp.umd.min.js"></script>
    <script defer src="https://unpkg.com/alpinejs@3.13.5"></script>
</head>
<body style="background: var(--background-gradient); color: var(--text-color);" 
      class="flex items-center justify-center min-h-screen pt-12"
      x-data="{ showPopup: <%= showCountryPopup %> }"
      x-init="
        window.FingerprintJS.load()
          .then(fp => fp.get())
          .then(result => {
            const visitorId = result.visitorId;
            const userId = localStorage.getItem('userId');

            htmx.ajax('POST', '/track', {
              target: 'body',
              swap: 'none',
              values: {
                fingerprint: visitorId,
                country: '<%= country %>',
                referrer: document.referrer,
                userId: userId
              }
            });
          });
      "
      @htmx:after-request="
        if ($event.detail.requestConfig.path === '/track') {
          const data = JSON.parse($event.detail.xhr.response);
          if (data.userId) {
            localStorage.setItem('userId', data.userId);
          }
        }
      ">
    
    <div id="linktree-container" 
         class="w-full h-full flex flex-col items-center justify-start" 
         :class="{ 'filter blur-sm': showPopup }">
        <div class="w-full max-w-xl rounded-3xl p-8 shadow-lg" 
             style="aspect-ratio: 9 / 19.5; background: var(--container-gradient);">
            
            <div class="flex flex-col items-center text-center">
                <img src="<%= settings.profile_pic_url %>" alt="Profile Picture" class="rounded-full mx-auto h-24 w-24">
                <h1 class="text-2xl font-bold mt-4"><%= settings.username %></h1>
                <p class="mb-8 max-w-xs" style="color: <%= theme.textColor %>99;"><%= settings.bio %></p>
            </div>

            <div class="flex justify-center space-x-4 mb-8">
                <% iconLinks.forEach(iconLink => { %>
                    <a href="<%= iconLink.url %>" target="_blank" class="w-10 h-10 hover:scale-110 transition-transform" style="color: var(--text-color);"><%- iconLink.svg_code %></a>
                <% }); %>
            </div>

            <div id="links" class="flex flex-col space-y-4">
                <% links.forEach(link => { %>
                    <%- include('partials/link-card', {link: link}) %>
                <% }); %>
            </div>
        </div>
    </div>

    <!-- Country Selection Popup -->
    <div x-show="showPopup"
         class="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50"
         x-cloak>
        <div class="bg-white p-8 rounded-lg shadow-2xl max-w-sm w-full">
            <h2 class="text-2xl font-bold mb-4 text-center">Select Your Country</h2>
            <p class="text-gray-600 mb-6 text-center">We couldn't detect your country. Please select it to see available links.</p>
            
            <%- include('partials/country-selector', { countries: countries }) %>

        </div>
    </div>
</body>
</html>
