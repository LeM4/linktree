<div id="link-list">
    <% links.forEach(link => { %>
        <div class="bg-gray-50 p-4 rounded-lg shadow-sm mb-4 flex items-center justify-between" id="link-<%= link.id %>">
            <div>
                <p class="font-bold text-lg"><%= link.title %></p>
                <p class="text-gray-600 text-sm"><%= link.url %></p>
                <p class="text-gray-500 text-xs">Enabled: <%= link.enabled ? 'Yes' : 'No' %></p>
                <p class="text-gray-500 text-xs">18+: <%= link.is_18_plus ? 'Yes' : 'No' %></p>
                <p class="text-gray-500 text-xs">Blocked Countries: <%= link.blocked_countries && link.blocked_countries !== 'null' ? JSON.parse(link.blocked_countries).join(', ') : 'None' %></p>
            </div>
            <div class="flex space-x-2">
                <form action="/admin/links/<%= link.id %>/toggle-18-plus" method="POST">
                    <button type="submit" class="px-3 py-1 rounded-md text-sm cursor-pointer hover:opacity-75 <%= link.is_18_plus ? 'bg-red-500 text-white' : 'bg-gray-200 text-gray-800' %>">
                        <span class="material-symbols-outlined">visibility_off</span>
                    </button>
                </form>
                <form action="/admin/links/<%= link.id %>/toggle" method="POST">
                    <button type="submit" class="bg-yellow-500 text-white px-3 py-1 rounded-md text-sm cursor-pointer hover:opacity-75">
                        Toggle
                    </button>
                </form>
                <div x-data="{ open: false, countries: '<%= link.blocked_countries && link.blocked_countries !== 'null' ? JSON.parse(link.blocked_countries).join(',') : '' %>' }">
                    <button @click="open = !open" class="bg-purple-500 text-white px-3 py-1 rounded-md text-sm cursor-pointer hover:opacity-75">
                        Edit Countries
                    </button>
                    <div x-show="open" @click.away="open = false" class="absolute bg-white p-2 rounded-md shadow-lg mt-1 z-10">
                        <form action="/admin/links/<%= link.id %>/countries" method="POST" class="flex flex-col space-y-2">
                            <input type="text" name="countries" x-model="countries" placeholder="e.g. US,DE,FR" class="p-1 border rounded-md text-sm">
                            <button type="submit" class="bg-green-500 text-white px-2 py-1 rounded-md text-sm cursor-pointer hover:opacity-75">Save</button>
                        </form>
                    </div>
                </div>
                <form action="/admin/links/<%= link.id %>/delete" method="POST">
                    <button type="submit" class="bg-red-500 text-white px-3 py-1 rounded-md text-sm cursor-pointer hover:opacity-75">
                        Delete
                    </button>
                </form>
            </div>
        </div>
    <% }); %>
</div>
